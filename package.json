{
	"name": "vscode-cardz",
	"displayName": "vscode-cardz",
	"publisher": "n1o",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.36.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/n1o/vscode-cardz"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:studyNotes",
		"onCommand:studyNotes.info",
		"onCommand:studyNotes.newCard",
		"onCommand:studyNotes.cardCoverage",
		"onCommand:studyNotes.review",
		"workspaceContains:**/.cardz.sqllite"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Study Notes configuration",
				"properties": {
					"conf.studyNotes.exclusionPattern": {
						"type": "array",
						"default": [
							"\\.vscode$",
							"\\.idea$",
							"\\.DS_Store$",
							"\\.metals$",
							"\\.assets",
							"^(.+)\\.flashCards$",
							"resources$",
							".cardz.sqllite"
						],
						"description": "Blacklist pattern in StudyNotes side bar",
						"scope": "window"
					},
					"conf.studyNotes.ankiHost": {
						"type": "string",
						"default": "http://localhost:8765",
						"description": "Anki connect http url",
						"scope": "window"
					}
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "study-notes",
					"title": "Study Notes",
					"icon": "media/img/dep.svg"
				}
			]
		},
		"views": {
			"study-notes": [
				{
					"id": "studyNotes",
					"name": "Study Notes"
				}
			]
		},
		"commands": [
			{
				"command": "studyNotes.info",
				"title": "Info",
				"category": "Study Notes"
			},
			{
				"command": "studyNotes.newCard",
				"title": "New Card",
				"category": "Cards"
			},
			{
				"command": "studyNotes.cardCoverage",
				"title": "Coverage",
				"category": "Cards"
			},
			{
				"command": "studyNotes.review",
				"title": "Review",
				"category": "Notes"
			}
		],
		"keybindings": [
			{
				"command": "studyNotes.info",
				"key": "ctrl+alt+i",
				"mac": "ctrl+cmd+i"
			},
			{
				"command": "studyNotes.cardCoverage",
				"key": "ctrl+alt+c",
				"mac": "ctrl+cmd+c"
			},
			{
				"command": "studyNotes.newCard",
				"key": "ctrl+alt+n",
				"mac": "ctrl+cmd+n"
			},
			{
				"command": "studyNotes.review",
				"key": "ctrl+alt+r",
				"mac": "ctrl+cmd+r"
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "studyNotes.info",
					"when": "view == studyNotes && viewItem == studyItem"
				},
				{
					"command": "studyNotes.review",
					"when": "view == studyNotes && viewItem == studyItem"
				}
			]
		},
		"colors": [
			{
				"id": "studyNotes.cardCoverage",
				"description": "Background decoration color for flash cards",
				"defaults": {
					"dark": "#FF000055",
					"light": "#FF000055",
					"highContrast": "#FF000055"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"test": "npm run compile && node ./node_modules/vscode/bin/test",
		"test:unit": "mocha -r ts-node/register src/test/unit/**/*.test.ts  --exit"
	},
	"devDependencies": {
		"@types/chai": "^4.2.3",
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"@types/uuid": "^3.4.5",
		"chai": "^4.2.0",
		"mocha": "^6.2.0",
		"ts-node": "^8.3.0",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"uuid": "^3.3.3",
		"vscode": "^1.1.28",
		"webpack": "^4.39.1",
		"webpack-cli": "^3.3.6"
	},
	"dependencies": {
		"@types/axios": "^0.14.0",
		"@types/cheerio": "^0.22.13",
		"@types/markdown-it": "0.0.8",
		"@types/nunjucks": "^3.1.2",
		"axios": "^0.19.0",
		"cheerio": "^1.0.0-rc.3",
		"gray-matter": "^4.0.2",
		"markdown-it": "^10.0.0",
		"moment": "^2.24.0",
		"nunjucks": "^3.2.0",
		"sql.js": "^1.0.0",
		"typeorm": "^0.2.19"
	}
}
